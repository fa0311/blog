---
import twemoji from "@twemoji/api";
interface Props {
  topics: string[];
}

const { topics } = Astro.props;
---

<div class="topics">
  {
    topics.map((topic) => (
      <a href={`/topics/${topic}`} class="topic">
        <div class="topic-icon" set:html={twemoji.parse("#âƒ£", { folder: "svg", ext: ".svg" })} />
        <p class="topic-item">{topic}</p>
      </a>
    ))
  }
</div>
<style>
  .topics {
    display: flex;
    padding: 0 0 10px 0;
    gap: 10px;
    flex-wrap: wrap;
  }

  .topic {
    display: flex;
    padding: 3px;
    border-radius: 20px;
    background: #f7fafc;
    border: 1px solid #e4edf4;
  }

  .topic:hover {
    background: #f5f9fc;
  }

  .topic-item {
    margin: auto 7px;
    font-size: 0.8rem;
    text-wrap: nowrap;
  }

  .topic-icon {
    width: 25px;
    height: 25px;
    border-radius: 50%;
    overflow: hidden;
  }
</style>
